<script>
  // Grab modal elements
  const bookmarkModal = document.getElementById("bookmarkModal");
  const viewBookmarksBtn = document.getElementById("viewBookmarksBtn");
  const closeBookmarkModal = document.getElementById("closeBookmarkModal");
  const bookmarkContainer = document.getElementById("bookmarkContainer");

  // ---------------------------
  // Open Modal
  // ---------------------------
  viewBookmarksBtn.addEventListener("click", (e) => {
    e.preventDefault(); // prevent default anchor click behavior
    console.log("ğŸ“Œ View Bookmarks clicked");

    if (!bookmarkContainer) {
      console.warn("âš ï¸ bookmarkContainer not found");
    }

    bookmarkModal.style.display = "flex";
    document.body.style.overflow = "hidden";
  });

  // ---------------------------
  // Close Modal
  // ---------------------------
  closeBookmarkModal.addEventListener("click", () => {
    console.log("âŒ Close bookmark modal clicked");
    bookmarkModal.style.display = "none";
    document.body.style.overflow = "auto";
  });

  // ---------------------------
  // Close Modal on Background Click
  // ---------------------------
  bookmarkModal.addEventListener("click", (e) => {
    if (e.target === bookmarkModal) {
      console.log("âŒ Background clicked, closing bookmark modal");
      bookmarkModal.style.display = "none";
      document.body.style.overflow = "auto";
    }
  });

  // ---------------------------
  // Remove Bookmark Button
  // ---------------------------
  document.querySelectorAll(".remove-bookmark-btn").forEach(btn => {
    btn.addEventListener("click", async (e) => {
      e.stopPropagation();
      const id = btn.dataset.id;
      console.log("ğŸ—‘ï¸ Remove bookmark clicked:", id);

      try {
        const res = await fetch(`/profile/bookmarks/remove/${id}`, { method: "POST" });
        if (res.ok) {
          console.log("âœ… Bookmark removed successfully");
          btn.closest(".bookmark-card").remove();

          if (document.querySelectorAll(".bookmark-card").length === 0) {
            bookmarkContainer.innerHTML = "<p>You have no bookmarks yet.</p>";
          }
        } else {
          console.warn("âš ï¸ Failed to remove bookmark");
        }
      } catch (err) {
        console.error("âŒ Error removing bookmark:", err);
      }
    });
  });
</script>

